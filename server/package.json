{
  "name": "tdc-takehome-fullstack-server",
  "version": "1.0.0",
  "description": "drivers.coop takehome technical (fullstack/server)",
  "scripts": {
    "build": "./node_modules/.bin/ts-node build.ts",
    "lint": "eslint . --ext .ts",
    "start": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node ./src"
  },
  "author": "The Drivers Cooperative (jobs@drivers.coop)",
  "license": "BSD 0-Clause",
  "private": true,
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "apollo-server-express": "^3.0.2",
    "express": "^4.17.1",
    "geolib": "^3.3.3",
    "graphql": "^15.5.1",
    "graphql-subscriptions": "^1.2.1",
    "nodemon": "^2.0.12",
    "subscriptions-transport-ws": "^0.9.19"
  },
  "devDependencies": {
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
